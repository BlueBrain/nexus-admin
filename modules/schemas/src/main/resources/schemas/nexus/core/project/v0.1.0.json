  "@type": "nxv:Schema",
  "shapes": [
    {
      "@id": "this:ProjectShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNodeOrIRI",
      "targetClass": "nxv:Project",
      "and": [
        {
          "node": "{{base}}/schemas/nexus/core/resource/v0.1.0/shapes/ResourceShape"
        },
        {
          "property": [
            {
              "path": "nxv:name",
              "name": "Name",
              "description": "The project name.",
              "datatype": "xsd:string",
              "maxCount": 1,
              "minCount": 1
            },
            {
              "path": "nxv:description",
              "name": "Description",
              "description": "The project description shape.",
              "datatype": "xsd:string",
              "maxCount": 1
            },
            {
              "path": "nxv:prefixMappings",
              "name": "Prefix mappings",
              "description": "Prefix mappings.",
              "node": "this:PrefixMappingShape"
            },
            {
              "path": "nxv:config",
              "name": "Project configuration",
              "description": "Prefix mappings.",
              "node": "this:ProjectConfigShape"
            }
          ]
        }
      ]
    },
    {
      "@id": "this:PrefixMappingShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNode",
      "property": [
        {
          "path": "nxv:prefix",
          "name": "Prefix name",
          "description": "Prefix name shape. A prefix name should be a string of length at least 3 and at most 32.",
          "datatype": "xsd:string",
          "pattern": "[a-z]+",
          "sh:minLength": 3,
          "sh:maxLength": 32,
          "maxCount": 1,
          "minCount": 1
        },
        {
          "path": "nxv:namespace",
          "name": "Namespace",
          "description": "A namespace shape. A namespace should an IRI.",
          "nodeKind": "sh:IRI",
          "maxCount": 1,
          "minCount": 1
        }
      ]
    },
    {
      "@id": "this:ProjectConfigShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNode",
      "property": [
        {
          "path": "nxv:maxAttachmentSize",
          "name": "Max attachment size",
          "description": "Maximum attachment size in bytes. The minimum allowed value is zero.",
          "datatype": "xsd:long",
          "minInclusive": 0,
          "maxCount": 1
        }
      ]
    },
    {
      "@id": "this:ResourceShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNodeOrIRI",
      "label": "A shape definition for a resource (e.g. instance, schema) in Nexus",
      "comment": "A Nexus resource may have a corresponding type (e.g. nxv:Schema for a schema and nxv:Instance for an instance) and/or may have specific properties (e.g. nxv:rev, nxv:deprecated).",
      "property": [
        "this:RevisionPropertyShape",
        "this:DeprecatedPropertyShape",
        "this:LinksPropertyShape"
      ]
    },
    {
      "@id": "this:RevisionPropertyShape",
      "@type": "sh:PropertyShape",
      "path": "nxv:rev",
      "name": "Revision number",
      "description": "The revision number of a resource.",
      "datatype": "xsd:integer",
      "minInclusive": 1,
      "maxCount": 1
    },
    {
      "@id": "this:DeprecatedPropertyShape",
      "@type": "sh:PropertyShape",
      "path": "nxv:deprecated",
      "name": "Deprecated",
      "description": "A boolean tag indicating whether the resource is deprecated or not.",
      "datatype": "xsd:boolean",
      "maxCount": 1
    },
    {
      "@id": "this:LinksPropertyShape",
      "@type": "sh:PropertyShape",
      "path": "nxv:links",
      "name": "Links",
      "description": "Links towards related resources.",
      "node": "this:LinkShape"
    },
    {
      "@id": "this:LinkShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNode",
      "property": [
        {
          "path": "nxv:self",
          "name": "self",
          "description": "The shape of this specific resource representation identifier.",
          "minCount": 1,
          "maxCount": 1
        }
      ]
    }
  ]
